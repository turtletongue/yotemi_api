{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [{
      "name": "@nestjs/swagger",
      "options": {
        "introspectComments": true,
        "dtoFileNameSuffix": [".dto.ts", ",.entity.ts"]
      }
    }]
  },
  "watchAssets": true
}
